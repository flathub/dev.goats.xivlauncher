<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <name>XIVLauncher</name>
  <id>dev.goats.xivlauncher</id>
  <launchable type="desktop-id">dev.goats.xivlauncher.desktop</launchable>
  <summary>Custom 3rd-party launcher for a critically acclaimed MMO</summary>
  <developer_name>XIVLauncher Contributors</developer_name>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0</project_license>
  <update_contact>goatsdev@protonmail.com</update_contact>
  <project_group>goatcorp</project_group>
  <description>
    <p>
      XIVLauncher is a custom 3rd-party launcher that offers painless patching, a
      customized WINE version for perfect compatibility, and multitude of useful plugins.
      Install, log in, patch, and get started!
    </p>
    <p>
      Note: This flatpak will not work perfectly with Steam due to flatpak limitations. Please see
      our Linux and Steam Deck FAQ linked under the help tab for more information and an alternative
      install options.
    </p>
  </description>
  <categories>
    <category>Game</category>
    <category>PackageManager</category>
  </categories>
  <branding>
    <color type="primary" scheme_preference="light">#afcfff</color>
    <color type="primary" scheme_preference="dark">#001b45</color>
  </branding>
  <url type="homepage">https://goatcorp.github.io/</url>
  <url type="bugtracker">https://github.com/goatcorp/XIVLauncher.Core/issues</url>
  <url type="help">https://goatcorp.github.io/faq/steamdeck</url>
  <url type="vcs-browser">https://github.com/goatcorp/XIVLauncher.Core</url>
  <screenshots>
    <screenshot type="default">
      <image>
        https://raw.githubusercontent.com/goatcorp/XIVLauncher.Core/master/misc/xlcore_screenshot_v2.png</image>
    </screenshot>
  </screenshots>
  <requires>
    <memory>8192</memory>
    <internet>always</internet>
    <control>keyboard</control>
    <control>pointing</control>
  </requires>
  <supports>
    <control>gamepad</control>
  </supports>
  <releases>
    <release date="2025-03-31" version="1.1.2">
      <description>
        <p>Release notes are available at
          https://github.com/goatcorp/XIVLauncher.Core/releases/tag/1.1.2</p>
      </description>
    </release>
  </releases>
  <content_rating type="oars-1.1" />
</component>
